<?xml version="1.0" encoding="utf-8"?>
<!--This will be the base layout for the registration steps for the user-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--Where the fragments will be populated-->
        <FrameLayout
            android:id="@+id/register_contentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--Steps button, which will allow user to proceed to next screen-->
        <Button
            android:id="@+id/register_nxt_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            app:borderWidth="0dp"
            android:layout_margin="20dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            android:layout_gravity="bottom|end"
            app:layout_anchor="@id/register_contentFrame"
            app:useCompatPadding="true"
            app:rippleColor="@android:color/white"
            app:layout_anchorGravity="bottom|right|end" />

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>