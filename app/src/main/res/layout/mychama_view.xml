<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Statement card-->
        <android.support.v7.widget.CardView
            android:id="@+id/mychamastatement_card"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            android:padding="24dp"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statment_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:textColor="@color/black"
                android:textSize="@dimen/statement_title_size"
                android:text="@string/statement_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/statement_from_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="@string/statement_from_label"/>
                <TextView
                    android:id="@+id/statement_from_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:text="@string/statement_from_field"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/statement_to_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="@string/statement_to_label"/>
                <TextView
                    android:id="@+id/statement_to_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black"
                    android:text="@string/statement_to_field"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingBottom="24dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/statement_amount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="@string/statement_amount_label"/>
                <TextView
                    android:id="@+id/statement_amount_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/black"
                    android:text="@string/statement_amount_field"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <!--Next meeting card-->
        <android.support.v7.widget.CardView
            android:id="@+id/mychamanxtmeeting_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            android:padding="24dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nxtmeeting_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:padding="12dp"
                android:text="@string/nxtmeeting_label"/>

            <TextView
                android:id="@+id/nxtmeeting_time_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:text="@string/nxtmeeting_time_field"/>

            <TextView
                android:id="@+id/nxtmeeting_venue_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:text="@string/nxtmeeting_venue_field"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <!--Target card-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/mychamaagenda_card"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            android:padding="24dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/agenda_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:text="@string/agenda_label"/>

            <TextView
                android:id="@+id/milestone_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/milestone_field"/>

            <TextView
                android:id="@+id/milestone_date_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/milestone_date"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <!--MEMBERS CARD-->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                android:padding="24dp"
                android:id="@+id/mychamamembers_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/members_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="@string/milestone_title"/>

                    <TextView
                        android:id="@+id/members_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50sp"
                        android:textColor="@color/black"
                        android:text="@string/members_number"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!--Expected Amount-->
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                android:padding="24dp"
                app:cardCornerRadius="@dimen/cardview_default_radius"
                android:id="@+id/mychamaexpected_amt_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/expectedamt_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="@string/expectedamt_title"/>

                    <TextView
                        android:id="@+id/expextedamt_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50sp"
                        android:textColor="@color/black"
                        android:text="@string/expectedamt_number"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</ScrollView>