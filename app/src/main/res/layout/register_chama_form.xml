<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_centerInParent="true"
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_add"
                app:cardBackgroundColor="@color/card_background"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="6dp"
                app:cardElevation="3dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:contentPadding="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="50dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/register_new_chamaaccount"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!--chama name-->
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.florent37.materialtextfield.MaterialTextField
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mtf_openKeyboardOnFocus="true"
                            app:mtf_cardCollapsedHeight="4dp"
                            app:mtf_image="@drawable/ic_account_circle_black_36dp">

                            <EditText
                                android:textSize="13sp"
                                android:hint="@string/signup_chamaname_str"
                                android:textColor="@color/black"
                                android:maxLines="1"
                                android:id="@+id/signup_chamaname_id"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/selector_bg_edit_2"
                                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                android:paddingBottom="2dp" />

                        </com.github.florent37.materialtextfield.MaterialTextField>
                    </LinearLayout>

                    <!--number of members-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.florent37.materialtextfield.MaterialTextField
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mtf_openKeyboardOnFocus="true"
                            app:mtf_cardCollapsedHeight="4dp"
                            app:mtf_image="@drawable/ic_action_user_groups_filled_50">

                            <EditText
                                android:id="@+id/signup_chamaMembers_id"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:hint="@string/signup_chamaMembers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:background="@drawable/selector_bg_edit_2"
                                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                android:paddingBottom="2dp" />
                        </com.github.florent37.materialtextfield.MaterialTextField>
                    </LinearLayout>

                    <!--Bank name-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.florent37.materialtextfield.MaterialTextField
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mtf_openKeyboardOnFocus="true"
                            app:mtf_cardCollapsedHeight="4dp"
                            app:mtf_image="@drawable/ic_action_bank_filled_50">

                            <EditText
                                android:id="@+id/signup_chama_bankName_id"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:hint="@string/signup_chama_bankName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:background="@drawable/selector_bg_edit_2"
                                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                android:paddingBottom="2dp" />
                        </com.github.florent37.materialtextfield.MaterialTextField>
                    </LinearLayout>

                    <!--account number-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.github.florent37.materialtextfield.MaterialTextField
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:mtf_openKeyboardOnFocus="true"
                            app:mtf_cardCollapsedHeight="4dp"
                            app:mtf_image="@drawable/ic_action_money_box_52">

                            <EditText
                                android:id="@+id/signup_chama_bankAccount_id"
                                android:textSize="13sp"
                                android:textColor="@color/black"
                                android:hint="@string/signup_bankAccount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text|number"
                                android:background="@drawable/selector_bg_edit_2"
                                android:textCursorDrawable="@drawable/bg_input_cursor_2"
                                android:paddingBottom="2dp" />
                        </com.github.florent37.materialtextfield.MaterialTextField>
                    </LinearLayout>

                    <Button
                        android:id="@+id/signup_chama_button_id"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/bt_shape_2"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/register_account"
                        android:textColor="@color/black">
                    </Button>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

    </RelativeLayout>
</ScrollView>
