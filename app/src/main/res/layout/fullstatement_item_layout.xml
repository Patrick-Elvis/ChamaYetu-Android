<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:orientation="horizontal">

    <TextView
        android:text="@string/full_statement_title_desc"
        style="@style/TextComponent.ItemRow"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <!--date-->
    <TextView
        android:text="@string/full_statement_title_date"
        android:layout_weight="1"
        style="@style/TextComponent.ItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--Reference number-->
    <TextView
        android:text="@string/full_statement_title_refno"
        android:layout_weight="1"
        style="@style/TextComponent.ItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--amount-->
    <TextView
        android:text="@string/full_statement_title_amount"
        android:layout_weight="1"
        android:gravity="end"
        style="@style/TextComponent.ItemRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>